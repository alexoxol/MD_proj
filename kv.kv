MDFloatLayout:
    BoxLayout:
        orientation: "vertical"
        size: root.size

        MDLabel:
            id: word_label
            text_size: self.size
            halign: "center"
            valign: "middle"
            text: "Enter a name"
            font_size: 32

        TextInput:
            id: word_input
            multiline: False
            size_hint: (1, .5)

        Button:
            size_hint: (1, .5)
            font_size: 32
            text: "Submit name"
            on_press: app.submit()

        Button:
            size_hint: (1, .5)
            font_size: 32
            text: "Show records"
            on_press: app.show()


